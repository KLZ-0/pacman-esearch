#!/bin/bash

quiet=0
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -q|--quiet)
    quiet=1
    shift
    ;;
esac
done

test $quiet -eq 0 && echo -e "\033[1;34m [1/2] \033[0m Gathering global database.."
pacman -Ssq > ./database-global
test $quiet -eq 0 && echo -e "\033[1;34m [2/2] \033[0m Gathering detailed database.."
pacman -Si > ./database
test $quiet -eq 0 && echo -e "\033[1;33m *** \033[0m eupdatedb finished successfully with $(cat ./database-global | wc -l) global packages"
